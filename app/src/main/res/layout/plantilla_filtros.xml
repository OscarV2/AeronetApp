<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginStart="5dp">

    <ImageView
        android:id="@+id/img_filtro"
        android:layout_width="@dimen/ancho_alto_img_filtro"
        android:layout_height="@dimen/ancho_alto_img_filtro"
        android:src="@mipmap/filter"
        />

    <TextView
        android:layout_alignRight="@id/img_filtro"
        android:layout_alignEnd="@id/img_filtro"
        android:id="@+id/tv_id_filtro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/texto_id_filtro"/>

    <TextView
        android:layout_alignRight="@id/img_filtro"
        android:layout_alignEnd="@id/img_filtro"
        android:layout_below="@id/tv_id_filtro"
        android:id="@+id/tv_peso_filtro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/texto_peso_filtro"/>

    <CheckBox
        android:id="@+id/checkFiltro"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

    <View
        android:layout_below="@id/img_filtro"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/blanco"
        />
</RelativeLayout>