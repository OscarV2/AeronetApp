<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginStart="5dp">

    <ImageView
        android:id="@+id/img_equipo"
        android:layout_width="@dimen/ancho_alto_img_filtro"
        android:layout_height="@dimen/ancho_alto_img_filtro"
        android:src="@mipmap/ic_equipos_round"
        />

    <TextView
        android:layout_alignRight="@id/img_filtro"
        android:layout_alignEnd="@id/img_equipo"
        android:id="@+id/tv_nombre_equipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/texto_id_filtro"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_alignRight="@id/img_equipo"
        android:layout_alignEnd="@id/img_equipo"
        android:layout_below="@id/tv_nombre_equipo"
        android:id="@+id/tv_tipo_equipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/texto_peso_filtro"/>

    <View
        android:layout_below="@id/img_equipo"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/blanco"
        />

</RelativeLayout>