<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fondo_App"
    tools:context="com.example.oscar.aeronet.vista.Detalles">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/img_equipo_detalles"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@mipmap/pq100_round"
                app:civ_border_width="2dp"
                app:civ_border_color="#000000FF"
                android:layout_marginTop="14dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tv_nombre_detalles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_equipo_detalles"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:textSize="22sp"
                android:textColor="@color/blanco"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/tv_nombre_detalles"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/marca"
                        android:textStyle="bold"
                        android:textSize="@dimen/texto_detalles_izquierda"
                        android:textColor="@color/blanco"/>
                    <TextView
                        android:id="@+id/tv_detalles_marca"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blanco"
                        android:textSize="@dimen/texto_detalles_derecha"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tipo"
                        android:textStyle="bold"
                        android:textSize="@dimen/texto_detalles_izquierda"
                        android:textColor="@color/blanco"/>
                    <TextView
                        android:id="@+id/tv_detalles_tipo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blanco"
                        android:textSize="@dimen/texto_detalles_derecha"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/filtros"
                        android:textStyle="bold"
                        android:textSize="@dimen/texto_detalles_izquierda"
                        android:textColor="@color/blanco"/>
                    <TextView
                        android:id="@+id/tv_detalles_filtros"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blanco"
                        android:textSize="@dimen/texto_detalles_derecha"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ultima_calibracion"
                        android:textStyle="bold"
                        android:textSize="@dimen/texto_detalles_izquierda"
                        android:textColor="@color/blanco"/>
                    <TextView
                        android:id="@+id/tv_detalles_ultima_cal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blanco"
                        android:textSize="@dimen/texto_detalles_derecha"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/descripcion"
                        android:textStyle="bold"
                        android:textSize="@dimen/texto_detalles_izquierda"
                        android:textColor="@color/blanco"/>
                    <TextView
                        android:id="@+id/tv_detalles_descripcion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blanco"
                        android:textSize="@dimen/texto_detalles_derecha"/>
                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
